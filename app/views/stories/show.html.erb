 <h1>

 		<% link_to @story.title, @story.url %>
 		<h1>

 	<section>
		<h1>
 			<%= link_to @story.title, @story.url %>
 		<h1>	
 		
 		<p><%= simple_format @story.body %></p><br>
 		<small>By <%= @story.author %></small><br>
 		<small>About <%= time_ago_in_words @story.created_at %></small>

 		<p>Votes: <%= @votes.count %></p>
 		<%= link_to "Edit", edit_story_path(@story) %>
 		<%= link_to "Add Comment", new_story_comment_path(@story) %>
 		
 		<% @story.comments.each do |comment| %>
 		<p><%= comment.body %></p>
 		<% end %>


 	</section>